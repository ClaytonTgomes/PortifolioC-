using System;

class Program
{
    static void Main(string[] args)
    {
        int soma = 0;
		Console.WriteLine("Digite 4 numeros");
		
		for (int i = 0;i < 4;i++){
            Console.Write("Digite o numero " + (i + 1) + " : ");
            int numero = int.Parse(Console.ReadLine());
			soma = soma += numero;
        }
		
		Console.WriteLine("A soma Ã© de: " + soma);
    }
}
